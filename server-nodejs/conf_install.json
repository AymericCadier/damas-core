{
    "authorMode" : true,
    "connection" : {
        "Cert": "cert.pem",
        "Key": "key.pem"
    },
    "db" : "mongodb",
    "mongodb": {
        "host": "localhost",
        "collection": "node",
        "port": 27017,
        "options": { "auto_reconnect": true }
    },
    "extensions": {
        "es6_polyfills": {
            "path": "./extensions/es6_polyfills.js"
        },
        "user_setup" : {
            "path" : "/home/julie/work/r5-base/server/user_setup.js",
            "conf": {
                "nodemailer_transporter": {
                    "sendmail": true,
                    "newline": "unix",
                    "path": "/usr/sbin/sendmail"
                },
                "nodemailer_email": {
                    "from": "\"Sender\" <noreply@example.com>"
                }
            }
        },
        "jwt": {
			"enable": false,
            "path": "./extensions/auth-jwt-node.js",
            "conf": {
                "required": false,
                "passwordHashAlgorithm": "sha1",
                "secret": "webtokensecret",
                "exp": 1440
            }
        },
        "noauth": {
			"enable": true,
            "path": "./extensions/auth-none.js"
        },
        "prefer_https": {
            "path": "./extensions/prefer_https.js"
        },
        "static_routes": {
            "path": "./extensions/static_routes.js",
            "conf": {
                "staticRoutes": {
                    "/api": "public/index.html",
                    "/console": "public/console.html",
                    "/signIn": "public/signIn.html",
                    "/damas.py": "../py/damas.py",
                    "/damas.sh": "../cli/damas.sh"
                },
                "publiclyServedFolders": [
                    "public", "../js"
                ]
            }
        }
    },
    "fileSystem": "/PRODUCTIONS/"
}
