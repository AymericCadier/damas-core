{
    "auth" : "no",
    "connection" : {
        "Cert": "cert.pem",
        "Key": "key.pem"
    },
    "db" : "mongodb",
    "mongodb" : {
        "host" : "localhost",
        "collection" : "node",
        "port" : 27017,
        "options" : { "auto_reconnect" : true }
    },
    "jwt" : {
        "required": false,
        "passwordHashAlgorithm" : "sha1",
        "secret" : "webtokensecret",
        "exp" : 1440
    },
    "extensions": {
        "prefer_https": {
            "path": "./extensions/prefer_https.js"
        },
        "static_routes": {
            "path": "./extensions/static_routes.js",
            "conf": {
                "staticRoutes": {
                    "/console": "public/console.html",
                    "/signIn": "public/signIn.html",
                    "/damas.py": "../py/damas.py",
                    "/damas.sh": "../cli/damas.sh"
                },
                "publiclyServedFolders" : [
                    "public", "../js"
                ]
            }
        }
    },
    "fileSystem": "/PRODUCTIONS/"
}
